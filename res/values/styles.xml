<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
        
    <style name="TitleBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">#D15FEE</item>
        <item name="android:gravity">center</item>
    </style>
    <style  name="SetupNextButtonStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:text">下一步</item>
            <item name="android:onClick">next</item>
            <item name="android:layout_alignParentRight">true</item>
            <item name="android:layout_alignParentBottom">true</item>
            <item name="android:background">@drawable/setup_btn_select</item>
            <item name="android:drawableRight">@drawable/next</item>
    </style>
    <style  name="SetupPreButtonStyle">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:text">上一步</item>
            <item name="android:onClick">pre</item>
            <item name="android:layout_alignParentLeft">true</item>
            <item name="android:layout_alignParentBottom">true</item>
            <item name="android:background">@drawable/setup_btn_select</item>
            <item name="android:drawableLeft">@drawable/previous</item>
    </style>
    <style name="MyPopupWindowStyle">
      
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/popupwindow_color_select</item>
        <item name="android:gravity">center</item>
        
    </style>
    

</resources>
